<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ba.unsa.etf.rma.lejla.projekatrma.KategorijeAkt">

    <RelativeLayout
        android:id="@+id/layoutPocetni"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/tekstPretraga"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/tekst"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/dPretraga"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/tekstPretraga"
            android:layout_marginLeft="10dp"
            android:text="Pretraga"
            android:layout_marginTop="5dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/dDodajKategoriju"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tekstPretraga"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="Dodaj Kategoriju"
            android:enabled="false"
            />

        <Button
            android:id="@+id/dDodajKnjigu"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tekstPretraga"
            android:layout_toRightOf="@id/dDodajKategoriju"
            android:text="Dodaj knjigu"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="5dp"
            />
        <ListView
            android:id="@+id/listaKategorija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dDodajKategoriju"
            android:layout_marginTop="30dp"></ListView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
